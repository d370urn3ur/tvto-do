<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/cell_padding" >
    
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/search_cell_image"
        android:layout_height="@dimen/poster138Height"
        android:layout_width="@dimen/poster138Width" />
    
	<TextView
	    android:id="@+id/search_cell_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@id/search_cell_image"
	    android:layout_toRightOf="@id/search_cell_image"
	    android:layout_marginLeft="@dimen/cell_padding"
	    android:layout_marginRight="@dimen/cell_padding"
	    android:textSize="@dimen/cell_text_size"
	    android:textStyle="bold" />
	
	<TextView
	    android:id="@+id/search_cell_status"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/search_cell_title"
	    android:layout_alignLeft="@id/search_cell_title"
	    android:layout_alignRight="@id/search_cell_title"
	    android:layout_marginTop="@dimen/cell_padding"
	    android:textSize="@dimen/cell_text_size"
	    android:visibility="gone" />
	
	<TextView
	    android:id="@+id/search_cell_year"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/search_cell_title"
	    android:layout_alignRight="@id/search_cell_title"
	    android:layout_below="@id/search_cell_status"
	    android:layout_marginTop="@dimen/cell_padding"
	    android:textSize="@dimen/cell_text_size"
	    android:textStyle="italic" />
	
	<TextView
	    android:id="@+id/search_cell_overview"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@id/search_cell_image"
	    android:layout_alignRight="@id/search_cell_title"
	    android:layout_below="@id/search_cell_image"
	    android:layout_marginTop="@dimen/cell_padding"
	    android:textSize="@dimen/cell_text_size"
	    android:visibility="gone" />
    
</RelativeLayout>
