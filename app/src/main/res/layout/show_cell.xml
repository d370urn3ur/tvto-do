<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/show_cell_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/show_cell_image"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/show_cell_text_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/show_cell_image"
            android:layout_alignRight="@id/show_cell_image"
            android:layout_alignStart="@id/show_cell_image"
            android:layout_alignEnd="@id/show_cell_image"
            android:layout_alignBottom="@id/show_cell_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_cell_next_title"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/cell_padding"
                android:textSize="@dimen/cell_text_size" />

            <TextView
                android:id="@+id/show_cell_next_date"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="@dimen/cell_padding"
                android:textSize="@dimen/cell_text_size"
                android:textStyle="italic" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>